/**index.wxss**/
.index{
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}
.search{
  margin: 20rpx 0;
}
.navList{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0;
}
.navList .item{
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #f90;
  border-radius: 50%;
  padding: 10rpx;
}
.shop-area .title{
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shop-area .title .line{
  width: 80rpx;
  height: 6rpx;
  background: #ccc;
}
.shop-area .title .name{
  color: #333;
  padding: 0 30rpx;
}
.shop-item{
  border: 1px solid #ccc;
  display: flex;
  flex-shrink: 0;
  margin: 5px 0;
}
.shop-item .left, .shop-item .right{
  flex: 2;
}
.shop-item .left{
  display: flex;
  justify-content: center;
  align-items: center;
}
.shop-item .left image{
  width: 80%;
  height: 80%
}
.shop-item .content{
  flex: 4;
  text-align: center;
}
.shop-item .content .from {
  font-size: 14px;
  padding: 4px 0 8px 0;
}
.shop-item .content .bottom {
  display: flex;
  justify-content: space-around;
  font-size: 12px;
  color: #ccc;
}
.shop-item .content .bottom .buy-count {
  color: #333;
}
.shop-item .right{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.shop-item .right .nowPrice {
  font-size: 18px;
  font-weight: 700;
  color: red;
}
.shop-item .right .prePrice {
  font-size: 12px;
  color: #ccc;
}
.shop-item .right .weui-btn{
  padding: 0;
  margin: 0;
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 12px;
}