/* pages/me/me.wxss */
.me {
  position: relative;
}
.info {
  width: 100%;
  /* height: 80px; */
  display: flex;
  justify-content: space-around;
  /* margin: 0 10px; */
}
.info .collect, .info .buy {
  text-align: center;
  flex: 2;
}
.info .collect .name, .info .buy .name {
  color: #ccc;
}
.info .user{
  flex: 4;
  text-align: center;
}
.info .user .username{
  font-size: 20px;
}
.info .user image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
.list {
  margin-top: 30px;
}
.list .item{
  background: rgb(242, 242, 242);
  margin: 10px 0;
  padding: 10px 0 10px 10px;
}
.order{
  width: 70px;
  height: 70px;
  /* line-height: 60px; */
  padding-left: 8px;
  letter-spacing: 4px;
  text-align: center;
  border-radius: 50%;
  background: rgb(255, 255, 84);
  position: fixed;
  top: 50%;
  right: 0;
  margin-right: -35px;
  margin-top: -35px;
  writing-mode: vertical-lr;
}
.payment{
  width: 50px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  border-radius: 50%;
  background: #fff;
  border: 1px solid #ccc;
  font-size: 12px;
  position: fixed;
  top: 50%;
  right: 0;
  margin-right: 5px;
  margin-top: -90px;
  z-index: 99;
}
