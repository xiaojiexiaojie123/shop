/* pages/recommend/recommend.wxss */
.shop-item{
  border: 1px solid #ccc;
  display: flex;
  flex-shrink: 0;
  margin: 5px 0;
}
.shop-item .left, .shop-item .right{
  flex: 2;
}
.shop-item .left{
  display: flex;
  justify-content: center;
  align-items: center;
}
.shop-item .left image{
  width: 80%;
  height: 80%
}
.shop-item .content{
  flex: 4;
  text-align: center;
}
.shop-item .content .from {
  font-size: 14px;
  padding: 4px 0 8px 0;
}
.shop-item .content .bottom {
  display: flex;
  justify-content: space-around;
  font-size: 12px;
  color: #ccc;
}
.shop-item .content .bottom .buy-count {
  color: #333;
}
.shop-item .right{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.shop-item .right .nowPrice {
  font-size: 18px;
  font-weight: 700;
  color: red;
}
.shop-item .right .prePrice {
  font-size: 12px;
  color: #ccc;
}
.shop-item .right .weui-btn{
  padding: 0;
  margin: 0;
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 12px;
}